<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DisableScreenshot.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DisableScreenshot"
    xmlns:views="clr-namespace:DisableScreenshot.Views" 
    Shell.FlyoutBehavior="Disabled"
    Title="DisableScreenshot">

    <!--<ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />-->
    <TabBar>
        <Tab Title="Tab Screenshot" Route="Screenshot" >
            <ShellContent ContentTemplate="{DataTemplate views:AScreenshot}"/>
        </Tab>
        <Tab Title="Tab disable screenshot" Route="DScreenshot">
            <ShellContent ContentTemplate="{DataTemplate views:DScreenshot}"/>
        </Tab>
    </TabBar>

</Shell>
